{
    "config": {
        "bin-dir": "bin/"
    },
    "require": {
        "php": ">=5.4.0",
        "phpspec/phpspec": "develop-dev",
        "behat/behat": "2.4.*@stable",
        "behat/mink": "1.4.*@stable",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*"
    },
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "phpspec/phpspec",
                "version": "develop-dev",
                "bin": ["scripts/phpspec-composer.php"],
                "autoload": {
                    "psr-0": { "PHPSpec\\": "src/" }
                },
                "source": {
                    "url": "git://github.com/andho/phpspec.git",
                    "type": "git",
                    "reference": "bugfix/composer-spec-only-works-in-phpspec-dir"
                },
                "require": {
                    "php": ">=5.3.2",
                    "mockery/mockery": "0.7.*"
                }
            }
        }
    ]
}
